<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eaut.myapp.behoctoan.kiemtra"
    android:background="#B0DCFF">

    <!-- Điểm số ở góc trên bên phải -->

    <!-- Thời gian ở góc trên bên trái -->

    <!-- Thông báo -->

    <TextView
        android:id="@+id/ScoreTextView"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="#F6A4C0"
        android:gravity="center"
        android:text="0/0"
        android:textColor="#040005"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TimeTextView"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#47A0E7"
        android:gravity="center"
        android:text="30s"
        android:textColor="#263238"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ScoreTextView"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tổng số câu hỏi -->

    <!-- Câu hỏi -->

    <!-- Các nút trả lời -->

    <TextView
        android:id="@+id/AlertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:text="Alert messages"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TotalQuestionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Câu hỏi: 1/10"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/QuestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:gravity="center"
        android:text="2 + 2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="154dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:background="#F477A2"
        android:onClick="optionSelect"
        android:tag="0"
        android:text="4"
        android:textColor="#000500"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/button1"
        android:layout_width="161dp"
        android:layout_height="86dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="8dp"
        android:background="#F477A2"
        android:onClick="optionSelect"
        android:tag="1"
        android:text="3"
        android:textColor="#000500"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/button2"
        android:layout_width="154dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="240dp"
        android:background="#F477A2"
        android:onClick="optionSelect"
        android:tag="2"
        android:text="2"
        android:textColor="#000500"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/button3"
        android:layout_width="161dp"
        android:layout_height="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="#F477A2"
        android:onClick="optionSelect"
        android:tag="3"
        android:text="1"
        android:textColor="#000500"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintWidth_percent="0.45" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dongvat3" />


</androidx.constraintlayout.widget.ConstraintLayout>
