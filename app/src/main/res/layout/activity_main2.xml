<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1"
    android:background="#D3EEFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eaut.myapp.behoctoan.MainActivity2">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Quay lại"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/demhinh"
        android:layout_width="293dp"
        android:layout_height="78dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#FFFEFE"
        android:textColor="#040000"
        android:textSize="24sp"
        android:typeface="serif"
        android:text="Đếm hình"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kiemtra"
        android:layout_width="293dp"
        android:layout_height="78dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#FFFEFE"
        android:text="Kiểm tra "
        android:textColor="#040000"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_so_sanh"
        android:layout_width="293dp"
        android:layout_height="78dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#FFFEFE"
        android:text="So sánh"
        android:textColor="#040000"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_tinh_nham"
        android:layout_width="293dp"
        android:layout_height="78dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="50dp"
        android:text="Tính nhẩm "
        android:backgroundTint="#FFFEFE"
        android:textColor="#040000"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="183dp"
        android:layout_height="210dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/monkey" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginTop="732dp"
        android:layout_marginEnd="292dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hoicham" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginTop="732dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hoicham" />

</androidx.constraintlayout.widget.ConstraintLayout>